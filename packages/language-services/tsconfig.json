{
	"compilerOptions": {
		"target": "es2020",
		"lib": ["ES2020", "WebWorker"],
		"sourceMap": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"declaration": true,
		"rootDir": "src",
		"allowSyntheticDefaultImports": true,
		"outDir": "dist",
		"strict": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["src/**/*.test.ts"]
}
