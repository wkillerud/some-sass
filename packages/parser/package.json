{
	"name": "@somesass/parser",
	"version": "1.0.0",
	"description": "Lezer-based Sass/SCSS grammar",
	"main": "dist/index.cjs",
	"type": "module",
	"exports": {
		"import": "./dist/index.js",
		"require": "./dist/index.cjs"
	},
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"author": "William Killerud <william@killerud.com> (https://www.williamkillerud.com/)",
	"license": "MIT",
	"devDependencies": {
		"@lezer/generator": "^1.0.0",
		"mocha": "^10.2.0",
		"rollup": "^2.52.2",
		"@rollup/plugin-node-resolve": "^9.0.0"
	},
	"dependencies": {
		"@lezer/common": "^1.2.0",
		"@lezer/lr": "^1.0.0",
		"@lezer/highlight": "^1.0.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/lezer-parser/sass.git"
	},
	"scripts": {
		"build": "lezer-generator src/sass.grammar -o src/parser && rollup -c",
		"build-debug": "lezer-generator src/sass.grammar --names -o src/parser && rollup -c",
		"prepare": "npm run build",
		"test": "mocha test/test-*.js"
	}
}
