{
	"name": "@somesass/project",
	"version": "1.0.0",
	"private": true,
	"description": "Workspace management for the somesass monorepo",
	"workspaces": [
		"packages/vscode-css-languageservice",
		"packages/language-services",
		"packages/language-server",
		"vscode-extension"
	],
	"scripts": {
		"prepare": "husky",
		"build": "npm run build --workspaces --if-present",
		"clean": "npm run clean --workspaces --if-present",
		"coverage": "npm run coverage --workspaces --if-present",
		"lint": "eslint \"**/*.ts\" --cache",
		"lint-staged": "lint-staged",
		"start:web": "npm run --workspace=some-sass start:web",
		"test": "cross-env CI=true npm run test --workspaces --if-present",
		"test:all": "npm run test && npm run test:e2e && npm run test:web",
		"test:e2e": "npm run test:e2e --workspaces --if-present",
		"test:web": "npm run test:web --workspaces --if-present"
	},
	"lint-staged": {
		"**/*.ts": [
			"prettier --write",
			"eslint --fix"
		]
	},
	"devDependencies": {
		"@commitlint/cli": "19.2.1",
		"@commitlint/config-conventional": "19.1.0",
		"@qiwi/multi-semantic-release": "7.1.1",
		"@semantic-release/git": "10.0.1",
		"@semantic-release/npm": "12.0.0",
		"@types/node": "20.12.2",
		"@types/vscode": "1.86.0",
		"@types/webpack-env": "1.18.4",
		"@typescript-eslint/eslint-plugin": "7.5.0",
		"@typescript-eslint/parser": "7.5.0",
		"copy-webpack-plugin": "12.0.2",
		"cross-env": "7.0.3",
		"eslint": "8.57.0",
		"eslint-config-prettier": "9.1.0",
		"eslint-plugin-import": "2.29.1",
		"eslint-plugin-prettier": "5.1.3",
		"husky": "9.0.11",
		"lint-staged": "15.2.2",
		"prettier": "3.2.5",
		"semantic-release": "23.0.6",
		"semantic-release-vsce": "5.7.1",
		"shx": "0.3.4",
		"ts-loader": "9.5.1",
		"typescript": "5.4.3",
		"webpack": "5.91.0",
		"webpack-cli": "5.1.4"
	},
	"overrides": {
		"@playwright/browser-chromium": "1.42.0",
		"playwright": "1.42.0",
		"playwright-core": "1.42.0"
	}
}
